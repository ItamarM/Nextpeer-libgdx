<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:padding="@dimen/np__content_padding" >

    <com.nextpeer.android.NextpeerUIImageView
        android:id="@+id/np__invite_fb_friends_item_thumbnail"
        style="@style/NP__.Widget.Replacement"
        android:layout_width="@dimen/np__replacement_thumbnail_size"
        android:layout_height="@dimen/np__replacement_thumbnail_size"
        android:layout_marginLeft="@dimen/np__invite_fb_friends_list_item_margin"
        android:layout_marginRight="@dimen/np__invite_fb_friends_list_item_margin" />

    <TextView
        android:id="@+id/np__invite_fb_friends_item_player_name"
        style="@style/NP__.Widget.Text.Content.Medium"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/np__invite_fb_friends_item_thumbnail"
        android:layout_alignTop="@+id/np__invite_fb_friends_item_thumbnail"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:layout_toRightOf="@+id/np__invite_fb_friends_item_thumbnail"
        android:layout_marginRight="@dimen/np__invite_fb_friends_list_item_margin"
        android:text="Player Name" />

    <Button
        android:id="@+id/np__invite_fb_friends_item_button"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/np__invite_fb_friends_item_thumbnail"
        android:layout_alignTop="@+id/np__invite_fb_friends_item_thumbnail"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/np__invite_fb_friends_list_item_margin"
        android:text="Add" />

</RelativeLayout>